<div class="page-header">
  <h1>
    Menus
    <a href="/menus/new" class="btn btn-lg btn-success">New Menu</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Food</th>
        <th>Dish</th>
        <th>Venue</th>
        <th>Actions</th>
      </tr>

      <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.food_id %></td>
        <td>
          <% if menu.dish.present? %>
            <a href="/dishes/<%= menu.dish.id %>">
              <%= menu.dish.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if menu.venue.present? %>
            <a href="/venues/<%= menu.venue.id %>">
              <%= menu.venue.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/menus/<%= menu.id %>" class="btn btn-primary">Show</a>
          <a href="/menus/<%= menu.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_menu/<%= menu.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @menus, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
